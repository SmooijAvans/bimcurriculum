{% extends 'index.html.twig' %}
{% block body %}
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1>Welkom {{app.user.volledigenaam}}</h1>
			Kies een van de opties uit het menu hierboven om aan de slag te gaan.
			<h2>Statistieken</h2>
		</div>
	</div>
	<div class="row">
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.aantal_toetsen}}</div>
			<div>toetsen in curriculum</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.aantal_leerdoelen}}</div>
			<div>leerdoelen in curriculum</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.aantal_courses}}</div>
			<div>courses in curriculum</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.gem_aantal_toetsen|round(0, 'common')}}</div>
			<div>gemiddeld aantal toetsen per course</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.gem_aantal_ld_courses|round(0, 'common')}}</div>
			<div>gemiddeld aantal leerdoelen per course</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.gem_aantal_sld_courses|round(0, 'common')}}</div>
			<div>gem. aantal subleerdoelen / leerdoel</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.aantal_mw}}</div>
			<div>medewerkers (inclusief inleen)</div>
		</div>
		
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.gem_aantal_t_per_m|round(0, 'common')}}</div>
			<div>gem. aantal toetsen per medewerker</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.aantal_domeinen}}</div>
			<div>domeinen in curriculum</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.aantal_ld_per_domein|round(0, 'common')}}</div>
			<div>gemiddeld aantal leerdoelen per domein</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.aantal_toetsen_per_domein|round(0, 'common')}}</div>
			<div>gemiddeld aantal toetsen per domein</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.gem_bloom_niveau|round(1, 'common')}}</div>
			<div>gemiddeld bloom niveau van leerdoelen</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.gem_context_niveau|round(1, 'common')}}</div>
			<div>gemiddeld HBO-I niveau van leerdoelen</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.gem_ec|round(1, 'common')}}</div>
			<div>gemiddeld aantal EC per toets</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.totaal_literatuur}}</div>
			<div>aantal gebruikte literatuurstukken</div>
		</div>
		<div class="statbox col-lg-3">
			<div class="statnumber">{{stats.literatuur_hergebruikt|round(1, 'common')}}</div>
			<div>gemiddeld # keren literatuur hergebruikt</div>
		</div>
	</div>
</div>
{% endblock %}
