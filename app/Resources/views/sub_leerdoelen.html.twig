{% extends 'index.html.twig' %}
{% block body %}
<h1>Leerdoelen organiseren tussen toetsen</h1>
<div class="bs-callout">
Hier kunt u leerdoelen verplaatsen naar toetsen.
</div>
<div class="col-lg-12">
	<form method="post" action="">
	    {{ form_widget(coursezoekform) }}
	    <input class="btn btn-default" type="submit" value="Filteren">
	</form>
</div>
<div class="col-lg-12">
<button class="btn btn-success" id="leerdoel_save_knop">Opslaan</button>
</div>
<div class="col-lg-6">
	<div class="accordion">
		{% for toets in toetsen %}
			<span class="h3">{{toets.naam[:70]}}</span>
			<ul class="sortable sortable-list sortcanvas" data-toets-id="{{toets.id}}">
				{% for doel in toets.leerdoelen %}
				<li class="sort-item"><span title="{{doel.beschrijving}} ({{doel.bron.naam|default()}})" class="h6" data-leerdoel-origineel-id="{{doel.id}}">{{doel.shortmarkup}}</span></li>
				{% endfor %}
			</ul>
		{% endfor %}

	</div>
</div>
<div class="col-lg-6">
	<div class="accordion">
{% for bron in bronnen  %}
	<span class="h3">{{bron.naam}}</span>
	<ul class="sortable sortable-list">
			{% for leerdoel in bron.leerdoelen %}
			<li class="sort-item">
				<span title="{{leerdoel.beschrijving}} ({{leerdoel.bron.naam|default()}})" class="h6" data-leerdoel-id="{{leerdoel.id}}">{{leerdoel.shortmarkup}}</span>
			</li>
			{% endfor %}
	</ul>
{% endfor %}
</div>
</div>
{% endblock %}
